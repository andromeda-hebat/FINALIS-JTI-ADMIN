<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="700.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="andromeda.hebat.finalisjtiadmin.controllers.jurusan.KelolaDataMahasiswaController">
    <fx:include source="../../components/adminjurusan/sidebar.fxml" />
    <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="700.0" style="-fx-cursor: hand;" HBox.hgrow="ALWAYS">
        <children>
            <fx:include source="../../components/admin/topbar.fxml" />
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="500.0" VBox.vgrow="ALWAYS">
                <children>
                    <Label text="Kelola Data Mahasiswa" textFill="#052c65">
                        <font>
                            <Font name="Reddit Sans Black" size="24.0" />
                        </font>
                    </Label>
                    <Button fx:id="btnTambahkanMhs" mnemonicParsing="false" onAction="#openOverlayTambahMahasiswa" style="-fx-background-color: #052C65;" text="Tambahkan" textFill="WHITE">
                        <VBox.margin>
                            <Insets bottom="15.0" top="15.0" />
                        </VBox.margin>
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../../icons/plus-square.png" />
                                </image></ImageView>
                        </graphic>
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding></Button>
                    <TableView prefHeight="200.0" prefWidth="200.0">
                        <columns>
                            <TableColumn prefWidth="75.0" text="No" />
                            <TableColumn prefWidth="150.0" text="Nama Lengkap" />
                            <TableColumn prefWidth="75.0" text="No. telepon" />
                            <TableColumn prefWidth="150.0" text="Tanggal Bergabung" />
                            <TableColumn prefWidth="100.0" text="Aksi" />
                        </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                    </TableView>
                </children>
                <VBox.margin>
                    <Insets left="20.0" right="20.0" top="20.0" />
                </VBox.margin>
            </VBox>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </VBox.margin>
                <children>
                    <Button fx:id="btnEditMhs" mnemonicParsing="false" onAction="#openOverlayEditMahasiswa" prefWidth="50.0" text="Edit">
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#openOverlayHapusMahasiswa" text="Delete" />
                </children>
            </HBox>
        </children>
    </VBox>

</HBox>
